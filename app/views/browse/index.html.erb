<div id="browse-bg">
  <div class="large-12 columns">
    <div class="browse">
      <div class="row">
        <div class="large-4 small-12 columns">
          <h3 class="browse-title">Browse all shelves </h3>
          <div class="hide-for-small panel">
            <%= form_tag(search_browse_index_path, method: "get") do %>
            <%= label_tag(:q, "Search Everyone's Shelves!") %>
            <%= text_field_tag(:q) %>
            <%= submit_tag("Search Shelves") %>
            <% end %>
            <br>
            <p class="enlarge_text"><%= link_to 'Welcome Page', root_path %></p>
          </div>
        </div>
        
        <div class="large-8 columns">
          <div class="row">
            <h3 class="browse-title"> All Books Within Shelf It</h3>
            <table>
              <thead>
                <tr>
                  <th>Cover</th>
                  <th>Title</th>
                  <th>Author</th>
                  <th colspan="2"></th>
                </tr>
              </thead>
              <tbody>
                <% if @books.empty? %>
                <td class="nobooks">There's nothing on this shelf!</td>
                <% else %>
                  <% @books.each do |book| %>
                    <tr>
                      <td class="cover"><%= image_tag book.book_cover_url, alt: book.title %></td>
                      <td id="title"><%= book.title %></td>
                      <td class="author"><%= book.author %></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


