<% if signed_in? %>
    <%= form_for :session, url: signout_path, method: 'delete' do |f| %>
      Signed in as <%= link_to current_user.name, current_user %>, <%= link_to 'View My Shelf', books_path %>
    <%= f.submit 'Sign Out', class: "button tiny" %>
    <% end %> 
  <% else %>
      <%= link_to 'Log In', new_session_path, class: "navigation-btn" %>
      <%= link_to "Sign Up", new_user_path, class: "navigation-btn" %>
  <% end %>
