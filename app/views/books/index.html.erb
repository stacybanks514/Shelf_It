<div class="row">
  <div class="large-12 columns">
    <div class="row">
      
      
      
      <div class="large-4 small-12 columns">
        
        <img src="http://www.imran.com/xyper_images/icon-user-default.png">
        
        <div class="hide-for-small panel">
          <h3>My Shelf!</h3>
          <h5 class="subheader">
          </h5>
          <%= link_to 'Add A Book', new_book_path %>
          <br>
          <%= link_to 'Browse Libraries', browse_index_path %>
          <br>
          <%= form_tag(search_books_path, method: "get") do %>
          <%= label_tag(:q, "Search your shelf:") %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Search") %>
          <% end %>
           <br>
          <%= link_to 'Welcome Page', root_path %>
        </div>
        
      </div>
      
      
      
      
      
      
      <div class="large-8 columns">
        <div class="row">
          
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Author</th>
                <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% if @books.empty? %>
              <td class="nobooks">There's nothing on this shelf!</td>
              <% else %>
              <% @books.each do |book| %>
              <tr>
                <td class="title"><%= book.title %></td>
                <td class="author"><%= book.author %></td>
                <td><%= link_to 'Show', book %></td>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
                <td class="notice"><%= link_to 'Remove', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
              <% end %>
            </tbody>
          </table>
          
          
        </div>
      </div>
      
    </div>
  </div>
</div>




