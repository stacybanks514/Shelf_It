<div id="browse-bg">
  <div class="large-12 columns">
    <div class="row">
      <div class="large-4 small-12 columns">
        <img src="http://www.imran.com/xyper_images/icon-user-default.png" class="profile">
        <hr>
        <%= link_to 'Add A Book', new_book_path, class: "button expand"  %>
        <%= link_to 'Browse Libraries', browse_index_path, class: "button expand"  %>
        <%= form_tag(search_books_path, method: "get") do %>
          <%= label_tag(:q, "Search your shelf:") %>
          <%= text_field_tag(:q) %>
          <%= submit_tag "Search Your Shelf", :class => "button expand" %> 
        <% end %> 
      </div>
    <div class="large-8 small-12 columns" id="profile-shelf">
        <div class="row">
          <h3>My Shelf!</h3>
          <table>
            <thead>
              <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Author</th>
              </tr>
            </thead>
            <tbody>
              <% if @books.empty? %>
              <td class="nobooks">There's nothing on this shelf!</td>
              <% else %>
              <% @books.each do |book| %>
              <tr>
                <td class="cover"><%= image_tag book.book_cover_url, alt: book.title %></td>
                <td class="title"><%= book.title %></td>
                <td class="author"><%= book.author %></td>
                <td><%= link_to 'Show', book %></td>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
                <td class="notice"><%= link_to 'Remove', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
