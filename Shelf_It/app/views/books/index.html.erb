<div class="header">
<h1 class="blogtitle">My Shelf!</h1>
</div>
<div class="container">
<table>
  <thead>
    <tr>
        <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% if @books.empty? %>
      <td class="nobooks">There's nothing on this shelf!</td>
    <% else %>
    <% @books.each do |book| %>
      <tr>
        
        <td class="title"><%= book.title %></td>
        <td class="author"><%= book.author %></td>
        
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td class="notice"><%= link_to 'Remove', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<div class="links">
<p class="button"><%= link_to 'New Book', new_book_path %></p>
<p class="button"><%= link_to 'Welcome Page', root_path %></p>
<%= form_tag(search_books_path, method: "get") do %>
  <%= label_tag(:q, "Search your shelf:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
<%= link_to 'Browse Libraries', browse_index_path %>
</div>
</div>